<div class="navbar-transparent navbar-wagon-fixed">
  <!-- Logo -->
  <div class="navbar-wagon-left">
    <%= link_to root_path, class: "navbar-text-brand" do %>
      <%= image_tag "dinner.svg", size: "64x51" %>
      <span class="navbar-text-brand">O Prato do Dia</span>
    <% end %>
  </div>
    <!-- Right Navigation -->
  <div class="navbar-wagon-right">

    <!-- Different navigation if login or not -->
    <div class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>

        <!-- Profile picture and dropdown -->
        <div class="navbar-wagon-item">
          <div class="dropdown">
            <%= image_tag avatar_url(current_user), class: "avatar-bordered dropdown-toggle", id:"navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li>
                <%= link_to edit_user_registration_path do %>
                  <%= t(".profile", default: "Edit Profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <%= t(".sign_out", default: "Log out") %>
                <% end %>
              </li>
              <hr>
              <li>
                <%= link_to "Create Restaurant", new_restaurant_path %>
              </li>
            </ul>
          </div>
        </div>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, {class: "navbar-wagon-item navbar-wagon-link"} %>
        <%= link_to "Log In", new_user_session_path, {class: "navbar-wagon-item navbar-wagon-link"} %>

      <% end %>
   </div>
  </div>
</div>
